<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_recommended_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:cardElevation="0dp"
        >

        <ImageView
            android:id="@+id/homeCardImage"
            android:layout_width="200dp"
            android:layout_height="221dp"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mainimage" />

        <TextView
            android:id="@+id/homeCardText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Kendrick Lamar to Headline Saturday!"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/homeDescription"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Announced at 1PM last night it is official Kendrick Lamar to Headline Saturday!!"
            android:textSize="10sp"
            android:textColor="@color/grey"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="15dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_r_view"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="230dp"
        tools:listitem="@layout/home_primary_cardview" />

</FrameLayout>